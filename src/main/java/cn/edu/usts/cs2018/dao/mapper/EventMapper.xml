<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.usts.cs2018.dao.mapper.EventMapper">
    <select id="findAll" resultType="cn.edu.usts.cs2018.pojo.Event">
        select *
        from event
    </select>
    <select id="findByEventName" resultType="cn.edu.usts.cs2018.pojo.Event">
        select *
        from event
        where eventname = #{eventname}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="eventid">
        insert into event(eventname, content, starttime, length, maxperson, totalmoney)
        values (#{eventname}, #{content}, #{starttime}, #{length}, #{maxperson}, #{totalmoeny})
    </insert>

    <delete id="delete" parameterType="Integer">
        delete
        from event
        where eventid = #{eventid}
    </delete>

    <update id="update" parameterType="Integer">
        update event
        set eventname=#{eventname},
            content=#{content},
            starttime=#{starttime},
            length=#{length},
            totalmoney=#{totalmoney}
        where eventid = #{eventid}
    </update>
</mapper>