<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.usts.cs2018.dao.mapper.UserMapper">

    <select id="findAll" resultType="cn.edu.usts.cs2018.pojo.User">
        select *
        from users
    </select>

    <select id="findByUnamePwd" resultType="cn.edu.usts.cs2018.pojo.User">
        select *
        from users
        where username = #{username}
          and password = #{password}
    </select>

    <select id="findByUid" resultType="cn.edu.usts.cs2018.pojo.User">
        select *
        from users
        where uid = #{uid}
    </select>

    <select id="findByUname" parameterType="String" resultType="cn.edu.usts.cs2018.pojo.User">
        select *
        from users
        where username = #{username}
    </select>
    <select id="findByUidUname" resultType="cn.edu.usts.cs2018.pojo.User">
        select *
        from users
        where uid = #{uid}
          and username = #{username}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="uid">
        insert into users(username, password, gender, phone, identity)
        values (#{username}, #{password}, #{gender}, #{phone}, #{identity})
    </insert>

    <delete id="delete" parameterType="Integer">
        delete
        from users
        where uid = #{uid}
    </delete>

    <update id="update">
        update users
        set username=#{username},
            password=#{password},
            gender=#{gender},
            phone=#{phone},
            identity=#{identity}
        where uid = #{uid}
    </update>


</mapper>